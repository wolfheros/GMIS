<Window x:Class="GMIS.ShowDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMIS"
        mc:Ignorable="d"
        Title="ShowDataWindow" Height="450" Width="800">
    <Grid>
        <ListView Margin="10" Name="classView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Class ID" Width="120" DisplayMemberBinding="{Binding class_id}" />
                    <GridViewColumn Header="Group ID" Width="120" DisplayMemberBinding="{Binding group_id}" />
                    <GridViewColumn Header="Day" Width="150" DisplayMemberBinding="{Binding day}" />
                    <GridViewColumn Header="Stat Time" Width="150" DisplayMemberBinding="{Binding start}" />
                    <GridViewColumn Header="End Time" Width="150" DisplayMemberBinding="{Binding end}" />
                    <GridViewColumn Header="Room" Width="100" DisplayMemberBinding="{Binding room}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
